<h1 class="h3 mb-3">Ajout Utilisateur</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="text-center">
                    <h1>Formulaire d'ajout utilisateur</h1>
                </div>
                <!--<h6 class="card-subtitle text-muted">Highly flexible tool that many advanced features to any HTML table.</h6>-->
            </div>
            <div class="card-body">
                <form id="user_add">
                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <label for="name">Nom</label>
                            <input type="text" id="name" name="name" class="form-control">
                            <span class="error jquery-validation-error small form-text invalid-feedback" id="error_name"></span>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label for="lastname">Pr√©nom</label>
                            <input type="text" id="lastname" name="lastname" class="form-control">
                            <span class="error jquery-validation-error small form-text invalid-feedback" id="error_lastname"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control">
                            <span class="error jquery-validation-error small form-text invalid-feedback" id="error_email"></span>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label for="password">Mot de passe</label>
                            <input type="password" id="password" name="password" class="form-control">
                            <span class="error jquery-validation-error small form-text invalid-feedback" id="error_password"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Enregistrer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


