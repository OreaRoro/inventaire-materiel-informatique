
<!--HEADER-->
<%- include('../_partials/_header') %>
<!--/HEADER-->

<h1 class="h3 mb-3">Modification Utilisateur</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="text-center">
                    <h1>Formulaire de modification utilisateur</h1>
                </div>
                <!--<h6 class="card-subtitle text-muted">Highly flexible tool that many advanced features to any HTML table.</h6>-->
            </div>
            <div class="card-body">
                <form id="user_update">
                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <label for="name">Nom</label>
                            <input type="text" id="name" name="name" class="form-control" value="<%= users.name %>" required>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label for="lastname">Prénom</label>
                            <input type="text" id="lastname" name="lastname" class="form-control" value="<%= users.lastname %>" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control" value="<%= users.email %>" required>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label for="role">Rôle</label>
                            <select name="role" id="role" class="form-control">
                                <% if (users.role === "UTILISATEUR") { %>
                                    <option value="UTILISATEUR" selected>Utilisateur</option>
                                <% } else if(users.role === "ADMINISTRATEUR") { %>
                                    <option value="ADMINISTRATEUR" selected>Administrateur</option>
                                <% } %>
                                <option value="UTILISATEUR">Utilisateur</option>
                                <option value="ADMINISTRATEUR">Administrateur</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <input type="hidden" id="id" name="id"  value="<%= users._id %>" class="form-control">
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Modifier</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<!--HEADER-->
<%- include('../_partials/_footer') %>
<!--/HEADER-->

