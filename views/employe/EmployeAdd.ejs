<h1 class="h3 mb-3">Ajout Employé</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="text-center">
                    <h1>Formulaire d'ajout employe</h1>
                </div>
                <!--<h6 class="card-subtitle text-muted">Highly flexible tool that many advanced features to any HTML table.</h6>-->
            </div>
            <div class="card-body">
                <form id="employe_add">
                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <label for="name">Nom</label>
                            <input type="text" id="name" name="name" class="form-control">
                            <span class="error jquery-validation-error small form-text invalid-feedback" id="error_name"></span>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label for="lastname">Prénom</label>
                            <input type="text" id="lastname" name="lastname" class="form-control">
                            <span class="error jquery-validation-error small form-text invalid-feedback" id="error_lastname"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <label for="adresse">Adresse</label>
                            <input type="text" id="adresse" name="adresse" class="form-control">
                            <span class="error jquery-validation-error small form-text invalid-feedback" id="error_adresse"></span>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label for="telephone">Téléphone</label>
                            <input type="text" id="telephone" name="telephone" class="form-control">
                            <span class="error jquery-validation-error small form-text invalid-feedback" id="error_telephone"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <label for="fonction">Fonction</label>
                            <select name="fonction" id="fonction" class="form-control">
                                <% for(var i = 0; i < fonction.length; i++) { %>
                                    <option value="<%= fonction[i]._id %>"><%= fonction[i].title %></option>
                                <% } %>
                            </select>
                            <span class="error jquery-validation-error small form-text invalid-feedback" id="error_fonction"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Enregistrer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


